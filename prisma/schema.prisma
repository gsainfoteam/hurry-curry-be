generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  CONFIRMED
  PREPARING
  COMPLETED
}

enum Role {
  STUDENT
  ADMIN
}

model User {
  uuid      String @id @default(uuid())
  name      String
  email     String @unique
  password  String
  studentId String

  accessToken  String?
  refreshToken String?

  orders Order[]
}

model Order {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [uuid], onDelete: Cascade)
  userId String

  status        Status   @default(CONFIRMED)
  curryQuantity Int
  naanQuantity  Int
  pickupTime    DateTime

  createdAt DateTime @default(now())
}

model TruckState {
  id      Int      @id @default(1)
  endTime DateTime @default(now())
}
